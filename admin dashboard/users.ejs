   <section id="users">

    <!-- VIEW USERS -->
    <div class="container-fluid pt-md-5 mt-md-1">
      <div class="row mb-5 pt-md-5 mt-md-3">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto table-responsive ">
          <h2 class="text-muted text-center mb-4">Users</h2>

          <table class="table table-light table-striped table-bordered text-center mydatatable" data-page-list="[5, 10, 25, 50, 100, 200, All]">
            <thead class="thead-dark pt-3">
              <tr class="text-muted">
                <th>#</th>
                <th>User Name</th>
                <th>Contact</th>
                <th>Email</th>
                <th>User Type</th>
                <th>RegDate</th>
                <th>Updation Date</th>
              </tr>
            </thead>
            <tbody>

            
            <%  for(var i=0; i<users.length;i++){ %>
              <tr>
                <th><%= users[i].user_id %></th>
                <td><%= users[i].user_name %></td>
                <td><%= users[i].contact %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].user_type %></td>
                <td><%= users[i].reg_date %></td>
                <td><%= users[i].updation_date %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- ADD USERS -->
    <div class="container-fluid pt-md-5 mt-md-1 form-width sub-section" id="add-users">
      <div class="row mb-5 pt-md-5 mt-md-3">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
          <h2 class="text-muted text-center mb-4"><i class="fas fa-plus-circle fa-lg mr-3"></i>Add Users</h2>
          <form action="/add-users" method="post">
            <div class="form-group py-2">
              <label>User Name</label>
              <input type="text" name="user_name" class="form-control" placeholder="Enter User Name">
            </div>
            <div class="form-group py-2">
              <label>Contact</label>
              <input type="tel" name="contact" class="form-control" placeholder="Enter Contact Number">
            </div>
            <div class="form-group py-2">
              <label>Email Address</label>
              <input type="email" name="email" class="form-control" placeholder="abc@example.com">
            </div>
            <div class="form-group py-2">
              <label for="user-password">Password</label>
              <input type="password" name="password" class="form-control" id="user-password" placeholder="Enter password">
            </div>
            <div class="form-group py-2">
              <label class="mr-5">User Type</label><br>
              <input type="radio" name="user_type" id="" value="admin" class="mr-2"><label for="" class="mr-4">Admin</label>
              <input type="radio" name="user_type" id="" value="general" class="mr-2"><label for="">General</label>
            </div>
            <button type="submit" class="btn btn-success"><i class="fas fa-plus-circle mr-2"></i>Add User</button>
          </form>
        </div>
      </div>
    </div>

    <!-- UPDATE USERS -->
