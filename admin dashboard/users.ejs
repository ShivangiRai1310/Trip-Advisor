          <!-- <form action="/autofill-users" method="post"> -->
            <form action="/update-users" method="post">
            <div class="form-group py-2">
              <label>User</label>
              <select class="form-control disable-basedon" name="user_name">
                <option value="" disabled selected>Select User to Update</option>
                <%  for(var i=0; i<users.length;i++){ %>
                    <option value=<%= users[i].user_name %> ><%= users[i].user_name %></option>
                <% } %>
              </select>
            </div>
            <!-- <button type="submit" class="btn btn-danger disable" disabled="disabled"><i class="fas fa-sync mr-3"></i>Autofill</button>
            </form> -->
            <div class="form-group py-2">
              <label>Contact</label>
              <input type="tel" name="contact" class="form-control disable" placeholder="Enter Contact Number" disabled="disabled">
            </div>
            <div class="form-group py-2">
              <label>Email Address</label>
              <input type="email" name="email" class="form-control disable" placeholder="abc@example.com" disabled="disabled">
            </div>
            <div class="form-group py-2">
              <label for="user-password">Password</label>
              <input type="password" name="password" class="form-control  disable" id="user-password" placeholder="Enter password" disabled="disabled">
            </div>
            <div class="form-group py-2">
              <label class="mr-5">User Type</label><br>
              <input type="radio" name="user_type" id="" value="admin" class="mr-2 disable" disabled="disabled"><label for="" class="mr-4">Admin</label>
              <input type="radio" name="user_type" id="" value="general" class="mr-2 disable" disabled="disabled"><label for="">General</label>
            </div>
            <button type="submit" class="btn btn-info disable" disabled="disabled"><i class="fas fa-edit mr-3"></i>Update User</button>
