  <script>

    //CHART 1
    var l = '<%= city_name %>'.split(',');
    var d = '<%= city_count %>'.split(',');
    //console.log(c);
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: l,
        datasets: [{
          label: '# of Places',
          data: d,
          backgroundColor: [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255,0.72)',
            'rgba(255, 159, 64, 0.7)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        title: {
          display: true,
          fontSize: 25,
          text: 'Place Count in each City'
        },
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            },
            scaleLabel: {
              display: true,
              labelString: 'Places Count'
            }
          }],
          xAxes: [{
            ticks: {
              beginAtZero: true
            },
            scaleLabel: {
              display: true,
              labelString: 'Cities'
            }
          }]
        }
      }

    });

    //chart2
    var l2 = '<%= package_name %>'.split(',');
    var d2 = '<%= package_count %>'.split(',');
    var ctx2 = document.getElementById('myPieChart').getContext('2d');
    var myPieChart = new Chart(ctx2, {
      type: 'pie',
      data: {
        labels: l2,
        datasets: [{
          data: d2,
          backgroundColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255,1)',
            'rgba(255, 159, 64, 1)'
          ],
          // borderColor: [
          //   'rgba(1, 1, 1, 1)',
          // ],
          borderWidth: 1
        }]
      },
      options: {
        title: {
          display: true,
          fontSize: 25,
          text: 'Most Popular Package'
        }
      }
    });


    //chart3
    var l3 = '<%= place_name %>'.split(',');
    var d3 = '<%= place_count %>'.split(',');
    var ctx3 = document.getElementById('myChart3').getContext('2d');
    var myChart3 = new Chart(ctx3, {
      type: 'bar',
      data: {
        labels: l3,
        datasets: [{
          label: '# of Likes',
          data: d3,
          backgroundColor: [
            'rgba(255, 99, 132, 0.8)',
            'rgba(54, 162, 235, 0.8)',
            'rgba(255, 206, 86, 0.8)',
            'rgba(75, 192, 192, 0.8)',
            'rgba(153, 102, 255,0.8)',
            'rgba(255, 159, 64, 0.8)',
            'rgba(155, 162, 264, 0.8)',
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        title: {
          display: true,
          fontSize: 25,
          text: 'Most Liked Places'
        },
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            },
            scaleLabel: {
              display: true,
              labelString: 'Likes Count'
            }
          }],
          xAxes: [{
            ticks: {
              beginAtZero: true
            },
            scaleLabel: {
              display: true,
              labelString: 'Places'
            }
          }]
        }
      }
    });

  </script>



