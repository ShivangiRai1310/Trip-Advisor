  <!-- PACKAGES -->
  <section id="packages">

    <!-- VIEW PACKAGE -->
    <div class="container-fluid pt-md-5 mt-md-1">
      <div class="row mb-5 pt-md-5 mt-md-3">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto table-responsive">
          <h2 class="text-muted text-center mb-4">Packages</h2>
          <table class="table table-light table-striped table-bordered text-center mydatatable"
            data-page-list="[5, 10, 25, 50, 100, 200, All]">
            <thead class="thead-dark pt-3">
              <tr class="text-muted">
                <th>#</th>
                <th>Name</th>
                <th>Location</th>
                <th>&#8377; Price per head</th>
                <th>Duration</th>
                <th class="description">Description</th>
              </tr>
            </thead>

            <tbody>
              <%  for(var i=0; i<packages.length;i++){ %>
              <tr>
                <th> <%=packages[i].package_id %> </th>
                <td> <%=packages[i].name %> </td>
                <td> <%=packages[i].location %> </td>
                <td> &#8377;<%=packages[i].price %> </td>
                <td> <%=packages[i].duration %> </td>
                <td> <%=packages[i].description %> </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- ADD PACKAGES -->
    <div class="container-fluid pt-md-5 mt-md-1 form-width sub-section" id="add-packages">
      <div class="row mb-5 pt-md-5 mt-md-3">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
          <h2 class="text-muted text-center mb-4"><i class="fas fa-plus-circle fa-lg mr-3"></i>Add Package</h2>
          <form action="/add-packages" method="post">
            <div class="form-group py-2">
              <label>Package Name</label>
              <input type="text" name="name" class="form-control" placeholder="Enter Package Name" required>
            </div>
            <div class="form-group py-2">
              <label>City</label>
              <select class="form-control required" name="city_id">
                <option value="" disabled selected>Select City</option>
                <%  for(var i=0; i<cities.length;i++){ %>
                <option value="<%= cities[i].city_id %>"><%= cities[i].city_id %> <%= cities[i].name %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group py-2">
              <label>Location</label>
              <input type="text" name="location" class="form-control" placeholder="Enter Package Location" required>
            </div>
            <div class="form-group py-2">
              <label>Price</label>
              <input type="number" name="price" class="form-control" placeholder="Enter Package price per head &#8377;" required>
            </div>
            <div class="form-group py-2">
              <label>Duration</label>
              <input type="text" name="duration" class="form-control" placeholder="Enter Package duration" required>
            </div>
            <div class="form-group py-2">
              <label>Description</label>
              <textarea name="description" class="form-control" cols="40" rows="5"
                placeholder="Type Package description here" autocomplete="off"></textarea>
            </div>
            <!-- need to add other package details -->
            <button type="submit" class="btn btn-success"><i class="fas fa-plus-circle mr-2"></i>Add Package</button>
          </form>
        </div>
      </div>
    </div>

    <!-- UPDATE PACKAGES -->
    <div class="container-fluid pt-md-5 mt-md-1 form-width sub-section" id="update-packages">
      <div class="row mb-5 pt-md-5 mt-md-3">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
          <h2 class="text-muted text-center mb-4"><i class="fas fa-edit fa-lg mr-3"></i>Update Package</h2>
          <form action="/update-packages" method="post">
            <div class="form-group py-2">
              <label>Package</label>
              <select class="form-control disable-basedon" name="name">
                <option value="" disabled selected>Select Package to Update</option>
                <%  for(var i=0; i<packages.length;i++){ %>
                <option value=<%= packages[i].name %>><%= packages[i].name %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group py-2">
              <label>City</label>
              <select class="form-control disable required" name="city_id" disabled>
                <option value="" disabled selected>Select City</option>
                <%  for(var i=0; i<cities.length;i++){ %>
                <option value="<%= cities[i].city_id %>"><%= cities[i].city_id %> <%= cities[i].name %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group py-2">
              <label>Location</label>
              <input type="text" name="location" class="form-control  disable" placeholder="Enter Package Location"
                disabled="disabled" required>
            </div>
            <div class="form-group py-2">
              <label>Price </label>
              <input type="number" name="price" class="form-control disable"
                placeholder="Enter Package price per head &#8377;" disabled="disabled" required>
            </div>
            <div class="form-group py-2">
              <label>Duration </label>
              <input type="text" name="duration" class="form-control disable"
                placeholder="Enter Package duration" disabled="disabled" required>
            </div>
            <div class="form-group py-2">
              <label>Description</label>
              <textarea name="description" class="form-control  disable" cols="40" rows="5"
                placeholder="Type package description here" autocomplete="off" disabled="disabled"></textarea>
            </div>
            <button type="submit" class="btn btn-info disable" disabled="disabled"><i
                class="fas fa-edit mr-3"></i>Update Package</button>
          </form>
        </div>
      </div>
    </div>

    <!-- DELETE PACKAGES -->
    <div class="container-fluid pt-md-5 mt-md-1 form-width sub-section" id="delete-packages">
      <div class="row mb-5 pt-md-5 mt-md-3">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
          <h2 class="text-muted text-center mb-4"><i class="fas fa-trash-alt fa-lg mr-3"></i>Delete Package</h2>
          <form action="/delete-packages" method="post" id="form1">
            <div class="form-group py-2">
              <label>Package</label>
              <select class="form-control disable-basedon" name="name">
                <option value="" disabled selected>Select Package to Delete</option>
                <%  for(var i=0; i<packages.length;i++){ %>
                <option value=<%= packages[i].name %>><%= packages[i].name %></option>
                <% } %>
              </select>
            </div>
            <button type="button" class="btn btn-danger mt-4 disable" onclick="javascript: return false;"
              data-toggle="modal" data-target="#deletepackage" disabled><i class="fas fa-trash-alt mr-3"></i>Delete
              Package</button>
          </form>
        </div>
      </div>
    </div>
    <!-- MODAL window for deletepackage -->
    <div class="modal fade" id="deletepackage">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Delete package</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
            Are you sure, you want to delete the package selected ?
          </div>
          <div class="modal-footer">
            <button type="submit" onclick="document.getElementById('form1').submit();" class="btn btn-danger"
              data-dismiss="modal">Delete</button>
            <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>

