  <body>
    <div class="container-fluid">
      <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>

        <!-- The content half -->
        <div class="col-md-6 bg-light">
          <div class="login d-flex align-items-center py-5">
            <!-- Demo content-->
            <div class="container">
              <div class="row">
                <div id="container" class="col-lg-10 col-xl-7 mx-auto">
                  <h3 class="display-4">Forgot your password?</h3>
                  <p class="text-muted mb-4">Change your password here</p>
                  <form id="flogin" action="forgot-password" method="POST">
                    <label for="r1" id="fn">Username :</label>
                    <div class="form-group mb-3">
                      <input
                        type="text"
                        name="user_name"
                        id="r1"
                        placeholder="Enter username"
                        required=""
                        autofocus=""
                        class="form-control rounded-pill border-0 shadow-sm px-4"
                      />
                    </div>
                    <label for="r5" id="em">Registered emailId</label>
                    <div class="form-group mb-3">
                      <input
                        type="email"
                        name="email"
                        id="r5"
                        placeholder="Enter email"
                        required=""
                        autofocus=""
                        class="form-control rounded-pill border-0 shadow-sm px-4"
                      />
                    </div>
                    <label for="r6" id="mn">Mobile Number</label>
                    <div class="form-group mb-3">
                      <input
                        type="text"
                        placeholder="1234567890"
                        name="contact"
                        id="r6"
                        pattern="[0-9]{10}"
                        required=""
                        autofocus=""
                        class="form-control rounded-pill border-0 shadow-sm px-4"
                      />
                    </div>
                    <label for="r4" id="pwd">Enter you new password </label>
                    <div class="form-group mb-3">
                      <input
                        type="password"
                        name="password"
                        id="r4"
                        placeholder="at least 6 characters"
                        minlength="6"
                        required
                        autofocus=""
                        class="form-control rounded-pill border-0 shadow-sm px-4"
                      />
                    </div>
                    <label for="r7" id="pwd2">Confirm Password </label>
                    <div class="form-group mb-3">
                      <input
                        type="password"
                        name="confirm_password"
                        id="r7"
                        placeholder="at least 6 characters"
                        minlength="6"
                        onchange="matchPassword()"
                        required
                        autofocus=""
                        class="form-control rounded-pill border-0 shadow-sm px-4"
                      />
                    </div>
                    <!-- <div class="custom-control custom-checkbox mb-3">
                                    <input id="customCheck1" type="checkbox" checked class="custom-control-input">
                                    <label for="customCheck1" class="custom-control-label">Remember password</label>
                                </div> -->
                    <button
                      type="submit"
                      class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm"
                    >
                      Change Password
                    </button>
                    <div
                      class="text-center d-flex justify-content-between mt-4"
                    >
                      <a href="login">Already a Member?</a>
                      <a href="register">New Member?</a>
                    </div>
                  </form>
                </div>
              </div>
              <h3><%= msg %></h3>
            </div>
            <!-- End -->
          </div>
        </div>
        <!-- End -->
      </div>
    </div>

